{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "lib": ["esnext", "dom"],
      "types": ["vite/client", "vitest/globals"],
      "outDir": "dist",
      "declaration": true,
      "declarationDir": "dist/types",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "allowJs": true,
      "checkJs": false
    },
    "include": [
      "src/**/*.ts", 
      "src/**/*.d.ts", 
      "src/**/*.vue",
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }